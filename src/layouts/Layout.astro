---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="fr-BE">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="author"
      content="Rémy Lempire, Rodrigue Deghorain, Harrison Nguyen, Hugo Lorenzoni"
    />
    <meta
      name="description"
      content="Réflexion à propos de la place de l'IA dans l'art"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>L'IA dans l'art</title>
  </head>
  <body>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--blue-color)) 30%,
      white 60%
    );
    --bg-color: 252, 253, 255;
    --blue-color: 30, 47, 151;
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  html {
    padding: 0;
    margin: 0;
    font-family: "Poppins", -apple-system, BlinkMacSystemFont, Segoe UI, Roboto,
      Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue,
      sans-serif;
    background-color: rgb(var(--bg-color));
    color: rgb(var(--blue-color));
    overflow-x: hidden;
  }

  body {
    margin: 0 auto;
  }

  header {
    position: sticky;
    top: 0;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  li {
    list-style: none;
  }
  p {
    text-indent: 2ch;
    text-align: justify;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  main {
    margin: auto;
    padding: 2rem 3rem;
    max-width: 80rem;
  }
  .title {
    position: relative;
    width: fit-content;
  }
  .title:after {
    content: "";
    display: block;
    position: absolute;
    height: 5px;
    width: 100%;
    background: linear-gradient(
      to left,
      rgb(var(--blue-color)),
      rgb(var(--accent))
    );
    border-radius: 2.5px;
    transform: translate(1ch);
  }
</style>
