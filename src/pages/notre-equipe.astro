---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="wrapper">
    <h1 class="title">Notre équipe</h1>
    <section>
      <div>
        <img src="Deghorain_Rodrigue.jpg" alt="Rodrigue Deghorain" />
        <h3>Rodrigue Deghorain</h3>
      </div>
      <div>
        <img src="Lempire_Rémy.jpg" alt="Remy Lempire" />
        <h3>Remy Lempire</h3>
      </div>
      <div>
        <img src="Nguyen_Harrison.jpg" alt="Harrison Nguyen" />
        <h3>Harrison Nguyen</h3>
      </div>
      <div>
        <img src="Lorenzoni_Hugo.jpg" alt="Hugo Lorenzoni" />
        <h3>Hugo Lorenzoni</h3>
      </div>
    </section>
  </main>
</Layout>

<style>
  div {
    width: min(15rem, 40%);
    height: max-content;
  }
  img {
    border-radius: 1rem;
    width: 100%;
    height: max-content;
    box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    border: 2px solid rgb(var(--accent));
    transition: all 0.5s ease-in-out;
    @media (max-width: 600px) {
      width: 100%;
    }
  }
  h3 {
    margin-top: 0;
  }
  img:hover {
    transform: translateY(-0.5rem);
  }
  section {
    display: flex;
    padding-block: 2rem;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: space-evenly;

    @media (max-width: 600px) {
      flex-wrap: wrap;
      gap: 0rem;
    }
  }
</style>
